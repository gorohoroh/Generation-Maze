<Window x:Class="WpfApp1.GenerationMaze"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wpfApp1="clr-namespace:WpfApp1"
        Title="ItemsControlDataBindingSample">
    <Grid Margin="10">
        <ItemsControl Name="ItemsControl">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="{Binding GridWidth}" Rows="{Binding GridHeight}" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate DataType="wpfApp1:Cell">
                    <TextBox Background="{Binding Color}" Margin="0,0,0,0" />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</Window>